<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicTacToe"
        tools:targetApi="31"
        tools:ignore="LockedOrientationActivity,DiscouragedApi">


        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TicTacToeActivity -->
        <activity
            android:name=".TicTacToeActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <!-- WordleActivity -->
        <activity
            android:name=".WordleActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <!-- ColorPuzzleActivity -->
        <activity
            android:name=".ColorPuzzleActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <!-- GameModeActivity -->
        <activity
            android:name=".GameModeActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <!-- SettingActivity -->
        <activity
            android:name=".SettingActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
