<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/playerVsAIB"
            android:text="@string/pvAI"
            style="@style/NavigationButton"
            android:onClick="handlePvAClick" />

        <Button
            android:id="@+id/playerVsPlayerB"
            android:text="@string/pvp"
            style="@style/NavigationButton"
            android:onClick="handlePvPClick" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/select_gamemode"
        android:textSize="30sp"
        android:textColor="@color/beige"
        android:textAppearance="@style/default_font"/>

    <!-- Shop Button Layout -->
    <include
        android:id="@+id/ShopButton"
        layout="@layout/shop_button_layout"/>

    <!-- Shadow Layout -->
    <include
        android:id="@+id/Shadow"
        layout="@layout/shadow_layout"/>

    <!-- Navigation Layout -->
    <include
        android:id="@+id/Navigation"
        layout="@layout/navigation_layout" />

    <!-- Shop Layout -->
    <include
        android:id="@+id/Shop"
        layout="@layout/shop_layout"/>

</RelativeLayout>