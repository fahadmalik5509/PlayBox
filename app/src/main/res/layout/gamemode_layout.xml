<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_rawRes="@raw/lottie_stars_background"
        style="@style/BackgroundLottieAnimation"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/playerVsAIB"
            android:text="@string/pvAI"
            style="@style/NavigationButton"
            android:onClick="handlePvAClick" />

        <Button
            android:id="@+id/playerVsPlayerB"
            android:text="@string/pvp"
            style="@style/NavigationButton"
            android:onClick="handlePvPClick" />

    </LinearLayout>

    <!-- Back ImageView -->
    <ImageView
        android:id="@+id/backIconIV"
        style="@style/BackImageView"
        android:onClick="goBack"
        android:contentDescription="@string/image_description" />

    <!-- Home ImageView -->
    <ImageView
        android:id="@+id/homeIconIV"
        style="@style/HomeImageView"
        android:onClick="goToHome"
        android:contentDescription="@string/image_description" />

    <!-- Setting ImageView -->
    <ImageView
        android:id="@+id/settingIconIV"
        style="@style/SettingImageView"
        android:onClick="goToSetting"
        android:contentDescription="@string/image_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/select_gamemode"
        android:textSize="30sp"
        android:textColor="@color/beige"
        android:textAppearance="@style/default_font"/>

</RelativeLayout>