<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/background_stars"
        android:scaleType="centerCrop"
        app:lottie_asyncUpdates="enabled"
        app:lottie_cacheComposition="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ticTacToeB"
            android:text="@string/TicTacToe"
            style="@style/NavigationButton"
            android:onClick="handleTicTacToeButtonClick" />

        <Button
            android:id="@+id/wordleB"
            android:text="@string/wordle"
            style="@style/NavigationButton"
            android:onClick="handleWordleButtonClick" />

        <Button
            android:id="@+id/colorPuzzleB"
            style="@style/NavigationButton"
            android:onClick="handleColorPuzzleButtonClick"
            android:text="@string/color_puzzle" />

    </LinearLayout>


    <!-- Back ImageView -->
    <ImageView
        android:id="@+id/backIconIV"
        style="@style/BackImageView"
        android:onClick="goToHome"
        android:contentDescription="@string/image_description" />

    <!-- Home ImageView -->
    <ImageView
        android:id="@+id/homeIconIV"
        style="@style/HomeImageView"
        android:onClick="goToHome"
        android:contentDescription="@string/image_description" />

    <!-- Setting ImageView -->
    <ImageView
        android:id="@+id/settingIconIV"
        style="@style/SettingImageView"
        android:onClick="goToSetting"
        android:contentDescription="@string/image_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/select_game"
        android:textSize="30sp"
        android:textColor="@color/beige"
        android:textAppearance="@style/default_font"/>

</RelativeLayout>