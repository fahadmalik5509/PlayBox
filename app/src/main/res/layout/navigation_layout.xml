<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/NavigationRL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="65dp"
    app:cardBackgroundColor="@color/espresso"
    app:cardCornerRadius="30dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            android:contentDescription="@string/image_description"
            android:onClick="handleBackClick"
            android:stateListAnimator="@animator/pulse_animation"/>


        <ImageView
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_icon"
            android:contentDescription="@string/image_description"
            android:onClick="handleHomeClick"
            android:stateListAnimator="@animator/pulse_animation"/>


        <ImageView
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/settings_icon"
            android:contentDescription="@string/image_description"
            android:onClick="handleSettingsClick"
            android:stateListAnimator="@animator/pulse_animation"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>