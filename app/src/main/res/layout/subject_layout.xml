<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/charcoal"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/subjectNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/underline_selector"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:inputType="text|textCapWords"
            android:maxWidth="250dp"
            android:maxLength="30"
            android:maxLines="1"
            android:minWidth="250dp"
            android:minHeight="18dp"
            android:textAppearance="@style/man_rope"
            android:textColor="@color/beige"
            android:textSize="18sp"
            android:hint="@string/subject_name"
            android:textColorHint="@color/hint"
            android:enabled="false"
            android:stateListAnimator="@animator/pulse_animation"/>

        <ImageView
            android:id="@+id/deleteIV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/trash_bin"
            android:stateListAnimator="@animator/pulse_animation"/>

        <ImageView
            android:id="@+id/editIV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@+id/deleteIV"
            android:layout_marginRight="10dp"
            android:src="@drawable/edit"
            android:stateListAnimator="@animator/pulse_animation"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subjectNameTV"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/beige"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total\nMarks"
                        android:textAppearance="@style/rubik"
                        android:textColor="@color/charcoal"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/totalMarksET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/underline_selector"
                        android:inputType="number"
                        android:maxLength="3"
                        android:minWidth="32dp"
                        android:minHeight="24dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:textAppearance="@style/default_font"
                        android:textColor="@color/charcoal"
                        android:textSize="16sp"
                        android:hint="@string/one_to_hundred"
                        android:textColorHint="@color/hint"
                        android:enabled="false"
                        android:stateListAnimator="@animator/pulse_animation"/>


                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/black"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marks\nObtained"
                        android:textAppearance="@style/rubik"
                        android:textColor="@color/charcoal"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/marksObtainedET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/underline_selector"
                        android:inputType="number"
                        android:maxLength="3"
                        android:minWidth="32dp"
                        android:minHeight="24dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:textAppearance="@style/default_font"
                        android:textColor="@color/charcoal"
                        android:textSize="16sp"
                        android:hint="@string/zero_to_hundred"
                        android:textColorHint="@color/hint"
                        android:enabled="false"
                        android:stateListAnimator="@animator/pulse_animation"/>


                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/black"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit\nHours"
                        android:textAppearance="@style/rubik"
                        android:textColor="@color/charcoal"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/creditHoursET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/underline_selector"
                        android:inputType="number"
                        android:maxLength="1"
                        android:minWidth="32dp"
                        android:minHeight="24dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:textAppearance="@style/default_font"
                        android:textColor="@color/charcoal"
                        android:textSize="16sp"
                        android:hint="@string/one_to_nine"
                        android:textColorHint="@color/hint"
                        android:enabled="false"
                        android:stateListAnimator="@animator/pulse_animation"/>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subjectNameTV"
            android:layout_toEndOf="@+id/layout1"
            android:layout_alignBottom="@+id/layout1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/dark_green"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPA"
                    android:textAppearance="@style/default_font"
                    android:textColor="@color/charcoal"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/gpaTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0,0"
                    android:textAppearance="@style/rubik"
                    android:textColor="@color/charcoal"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/saveB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/exit_no"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:text="Save"
            android:textSize="22sp"
            android:textColor="@color/charcoal"
            android:textAppearance="@style/default_font"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>