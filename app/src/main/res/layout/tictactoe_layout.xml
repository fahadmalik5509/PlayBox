<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    tools:context=".TicTacToeActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3" >

        <Button
            android:id="@+id/btn0"
            android:tag="0"
            android:layout_row="0"
            android:layout_column="0"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn1"
            android:tag="1"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn2"
            android:tag="2"
            android:layout_row="0"
            android:layout_column="2"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn3"
            android:tag="3"
            android:layout_row="1"
            android:layout_column="0"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn4"
            android:tag="4"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn5"
            android:tag="5"
            android:layout_row="1"
            android:layout_column="2"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn6"
            android:tag="6"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn7"
            android:tag="7"
            android:layout_row="2"
            android:layout_column="1"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn8"
            android:tag="8"
            android:layout_row="2"
            android:layout_column="2"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

    </GridLayout>

    <!-- Back ImageView -->
    <ImageView
        android:id="@+id/ivBackIcon"
        style="@style/BackImageView"
        android:onClick="goToHome" />

    <!-- Home ImageView -->
    <ImageView
        android:id="@+id/ivHomeIcon"
        style="@style/HomeImageView"
        android:onClick="goToHome" />

    <!-- Setting ImageView -->
    <ImageView
        android:id="@+id/ivSettingIcon"
        style="@style/SettingImageView"
        android:onClick="goToSetting" />

    <!--    GameDraw ImageView-->
    <ImageView
        android:contentDescription="@string/imageDescription"
        android:id="@+id/drawImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:visibility="gone"
        app:srcCompat="@drawable/draw"/>

    <TextView
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="Replay"
        android:textSize="50sp"
        android:textColor="@color/beige"
        android:textAppearance="@style/custom_font"
        android:onClick="resetGame"/>

    <TextView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Turn X"
        android:textSize="50sp"
        android:textColor="@color/beige"
        android:textAppearance="@style/custom_font"/>

</RelativeLayout>