<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TicTacToeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_above="@+id/gridLayout"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="70dp"
        app:cardBackgroundColor="@color/beige"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="Aliyan"
                android:singleLine="true"
                android:textAppearance="@style/custom_font"
                android:textColor="@color/background"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="X"
                android:textAppearance="@style/custom_font"
                android:textColor="@color/background"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Score: 99"
                android:textAppearance="@style/custom_font"
                android:textColor="@color/background"
                android:textSize="10sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_above="@+id/gridLayout"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="70dp"
        app:cardBackgroundColor="@color/beige"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"

                android:text="Fahad"
                android:textAppearance="@style/custom_font"
                android:textColor="@color/background"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="X"
                android:textAppearance="@style/custom_font"
                android:textColor="@color/background"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Score: 99"
                android:textAppearance="@style/custom_font"
                android:textColor="@color/background"
                android:textSize="10sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3" >

        <Button
            android:id="@+id/btn0"
            android:tag="0"
            android:layout_row="0"
            android:layout_column="0"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn1"
            android:tag="1"
            android:layout_row="0"
            android:layout_column="1"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn2"
            android:tag="2"
            android:layout_row="0"
            android:layout_column="2"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn3"
            android:tag="3"
            android:layout_row="1"
            android:layout_column="0"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn4"
            android:tag="4"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn5"
            android:tag="5"
            android:layout_row="1"
            android:layout_column="2"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn6"
            android:tag="6"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn7"
            android:tag="7"
            android:layout_row="2"
            android:layout_column="1"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

        <Button
            android:id="@+id/btn8"
            android:tag="8"
            android:layout_row="2"
            android:layout_column="2"
            style="@style/BoardButton"
            android:onClick="handleBoardClick" />

    </GridLayout>

    <!-- Back ImageView -->
    <ImageView
        android:id="@+id/ivBackIcon"
        style="@style/BackImageView"
        android:onClick="goToHome" />

    <!-- Home ImageView -->
    <ImageView
        android:id="@+id/ivHomeIcon"
        style="@style/HomeImageView"
        android:onClick="goToHome" />

    <!-- Setting ImageView -->
    <ImageView
        android:id="@+id/ivSettingIcon"
        style="@style/SettingImageView"
        android:onClick="goToSetting" />


    <!--Turn TextView-->
    <TextView
        android:id="@+id/tvEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="50sp"
        android:textColor="@color/beige"
        android:textAppearance="@style/custom_font"/>

    <RelativeLayout
        android:id="@+id/rlShadow"
        style="@style/ShadowLayout"/>

    <!--    GameDraw ImageView-->
    <ImageView
        android:contentDescription="@string/imageDescription"
        android:id="@+id/ivDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:visibility="gone"
        android:src="@drawable/draw"/>

    <TextView
        android:id="@+id/tvReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="Replay"
        android:textSize="50sp"
        android:textColor="@color/beige"
        android:textAppearance="@style/custom_font"
        android:onClick="resetGame"/>

    <RelativeLayout
        android:id="@+id/rlDifficulty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivDifficulty"
            android:background="@drawable/circle_background"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/difficulty"
            android:gravity="center"
            android:paddingHorizontal="3dp"
            android:onClick="difficultyClicked" />

        <TextView
            android:id="@+id/tvDifficultyTooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivDifficulty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/popup_background"
            android:gravity="center"
            android:padding="10dp"
            android:textAppearance="@style/custom_font"
            android:textColor="@color/beige"
            android:textSize="10sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavFireworks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/fireworks"
        app:lottie_loop="true"/>

</RelativeLayout>