<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/background">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/background_stars"
        android:scaleType="centerCrop"
        app:lottie_asyncUpdates="enabled"
        app:lottie_cacheComposition="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <!-- Flame AnimationView -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/flameLAV"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="50dp"
        app:lottie_rawRes="@raw/flame"
        app:lottie_loop="true"
        android:visibility="gone"/>

    <!-- LetterBox Layout -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:useDefaultMargins="true">

        <EditText
            android:id="@+id/letterBoxR0C0EV"
            style="@style/letterBoxTextView"
            android:layout_row="0"
            android:layout_column="0"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR0C1EV"
            style="@style/letterBoxTextView"
            android:layout_row="0"
            android:layout_column="1"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR0C2EV"
            style="@style/letterBoxTextView"
            android:layout_row="0"
            android:layout_column="2"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR0C3EV"
            style="@style/letterBoxTextView"
            android:layout_row="0"
            android:layout_column="3"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR0C4EV"
            style="@style/letterBoxTextView"
            android:layout_row="0"
            android:layout_column="4"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR1C0EV"
            style="@style/letterBoxTextView"
            android:layout_row="1"
            android:layout_column="0"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR1C1EV"
            style="@style/letterBoxTextView"
            android:layout_row="1"
            android:layout_column="1"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR1C2EV"
            style="@style/letterBoxTextView"
            android:layout_row="1"
            android:layout_column="2"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR1C3EV"
            style="@style/letterBoxTextView"
            android:layout_row="1"
            android:layout_column="3"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR1C4EV"
            style="@style/letterBoxTextView"
            android:layout_row="1"
            android:layout_column="4"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR2C0EV"
            style="@style/letterBoxTextView"
            android:layout_row="2"
            android:layout_column="0"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR2C1EV"
            style="@style/letterBoxTextView"
            android:layout_row="2"
            android:layout_column="1"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR2C2EV"
            style="@style/letterBoxTextView"
            android:layout_row="2"
            android:layout_column="2"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR2C3EV"
            style="@style/letterBoxTextView"
            android:layout_row="2"
            android:layout_column="3"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR2C4EV"
            style="@style/letterBoxTextView"
            android:layout_row="2"
            android:layout_column="4"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR3C0EV"
            style="@style/letterBoxTextView"
            android:layout_row="3"
            android:layout_column="0"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR3C1EV"
            style="@style/letterBoxTextView"
            android:layout_row="3"
            android:layout_column="1"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR3C2EV"
            style="@style/letterBoxTextView"
            android:layout_row="3"
            android:layout_column="2"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR3C3EV"
            style="@style/letterBoxTextView"
            android:layout_row="3"
            android:layout_column="3"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR3C4EV"
            style="@style/letterBoxTextView"
            android:layout_row="3"
            android:layout_column="4"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR4C0EV"
            style="@style/letterBoxTextView"
            android:layout_row="4"
            android:layout_column="0"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR4C1EV"
            style="@style/letterBoxTextView"
            android:layout_row="4"
            android:layout_column="1"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR4C2EV"
            style="@style/letterBoxTextView"
            android:layout_row="4"
            android:layout_column="2"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR4C3EV"
            style="@style/letterBoxTextView"
            android:layout_row="4"
            android:layout_column="3"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR4C4EV"
            style="@style/letterBoxTextView"
            android:layout_row="4"
            android:layout_column="4"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR5C0EV"
            style="@style/letterBoxTextView"
            android:layout_row="5"
            android:layout_column="0"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR5C1EV"
            style="@style/letterBoxTextView"
            android:layout_row="5"
            android:layout_column="1"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR5C2EV"
            style="@style/letterBoxTextView"
            android:layout_row="5"
            android:layout_column="2"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR5C3EV"
            style="@style/letterBoxTextView"
            android:layout_row="5"
            android:layout_column="3"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/letterBoxR5C4EV"
            style="@style/letterBoxTextView"
            android:layout_row="5"
            android:layout_column="4"
            tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

    </GridLayout>

    <!-- Keyboard Layout -->
    <LinearLayout
        android:id="@+id/llKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qTextView"
                android:tag="Q"
                style="@style/KeyboardTextView"
                android:text="@string/letter_Q"/>

            <TextView
                android:id="@+id/wTextView"
                android:tag="W"
                style="@style/KeyboardTextView"
                android:text="@string/letter_W"/>

            <TextView
                android:id="@+id/eTextView"
                android:tag="E"
                style="@style/KeyboardTextView"
                android:text="@string/letter_E"/>

            <TextView
                android:id="@+id/rTextView"
                android:tag="R"
                style="@style/KeyboardTextView"
                android:text="@string/letter_R"/>

            <TextView
                android:id="@+id/tTextView"
                android:tag="T"
                style="@style/KeyboardTextView"
                android:text="@string/letter_T"/>

            <TextView
                android:id="@+id/yTextView"
                android:tag="Y"
                style="@style/KeyboardTextView"
                android:text="@string/letter_Y"/>

            <TextView
                android:id="@+id/uTextView"
                android:tag="U"
                style="@style/KeyboardTextView"
                android:text="@string/letter_U"/>

            <TextView
                android:id="@+id/iTextView"
                android:tag="I"
                style="@style/KeyboardTextView"
                android:text="@string/letter_I"/>

            <TextView
                android:id="@+id/oTextView"
                android:tag="O"
                style="@style/KeyboardTextView"
                android:text="@string/letter_O"/>

            <TextView
                android:id="@+id/pTextView"
                android:tag="P"
                style="@style/KeyboardTextView"
                android:text="@string/letter_P"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/aTextView"
                android:tag="A"
                style="@style/KeyboardTextView"
                android:text="@string/letter_A"/>

            <TextView
                android:id="@+id/sTextView"
                android:tag="S"
                style="@style/KeyboardTextView"
                android:text="@string/letter_S"/>

            <TextView
                android:id="@+id/dTextView"
                android:tag="D"
                style="@style/KeyboardTextView"
                android:text="@string/letter_D"/>

            <TextView
                android:id="@+id/fTextView"
                android:tag="F"
                style="@style/KeyboardTextView"
                android:text="@string/letter_F"/>

            <TextView
                android:id="@+id/gTextView"
                android:tag="G"
                style="@style/KeyboardTextView"
                android:text="@string/letter_G"/>

            <TextView
                android:id="@+id/hTextView"
                android:tag="H"
                style="@style/KeyboardTextView"
                android:text="@string/letter_H"/>

            <TextView
                android:id="@+id/jTextView"
                android:tag="J"
                style="@style/KeyboardTextView"
                android:text="@string/letter_J"/>

            <TextView
                android:id="@+id/kTextView"
                android:tag="K"
                style="@style/KeyboardTextView"
                android:text="@string/letter_K"/>

            <TextView
                android:id="@+id/lTextView"
                android:tag="L"
                style="@style/KeyboardTextView"
                android:text="@string/letter_L"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/backspaceIV"
                android:tag="backspace"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="6dp"
                android:background="@drawable/keyboard_keys_background"
                android:src="@drawable/backspace"
                android:onClick="keyboardClicked"
                android:contentDescription="@string/image_description" />

            <TextView
                android:id="@+id/zTextView"
                android:tag="Z"
                style="@style/KeyboardTextView"
                android:text="@string/letter_Z"/>

            <TextView
                android:id="@+id/xTextView"
                android:tag="X"
                style="@style/KeyboardTextView"
                android:text="@string/letter_X"/>

            <TextView
                android:id="@+id/cTextView"
                android:tag="C"
                style="@style/KeyboardTextView"
                android:text="@string/letter_C"/>

            <TextView
                android:id="@+id/vTextView"
                android:tag="V"
                style="@style/KeyboardTextView"
                android:text="@string/letter_V"/>

            <TextView
                android:id="@+id/bTextView"
                android:tag="B"
                style="@style/KeyboardTextView"
                android:text="@string/letter_B"/>

            <TextView
                android:id="@+id/nTextView"
                android:tag="N"
                style="@style/KeyboardTextView"
                android:text="@string/letter_N"/>

            <TextView
                android:id="@+id/mTextView"
                android:tag="M"
                style="@style/KeyboardTextView"
                android:text="@string/letter_M"/>

            <ImageView
                android:id="@+id/enterIV"
                android:tag="enter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:padding="6dp"
                android:background="@drawable/keyboard_keys_background"
                android:src="@drawable/enter"
                android:onClick="keyboardClicked"
                android:contentDescription="@string/image_description"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Blast AnimationView -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/blastLAV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        app:lottie_rawRes="@raw/blast"
        android:visibility="gone"/>

    <!-- Skip AnimationView -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/skipLAV"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignBottom="@+id/gridLayout"
        app:lottie_rawRes="@raw/skip_animation" />

    <!-- Coin Blast AnimationView -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/coinBlastLAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:lottie_rawRes="@raw/coin_blast_animation"
        android:visibility="gone"/>

    <!-- Back ImageView -->
    <ImageView
        android:id="@+id/backIconIV"
        style="@style/BackImageView"
        android:onClick="goBack"
        android:contentDescription="@string/image_description" />

    <!-- Home ImageView -->
    <ImageView
        android:id="@+id/homeIconIV"
        style="@style/HomeImageView"
        android:onClick="goToHome"
        android:contentDescription="@string/image_description" />

    <!-- Setting ImageView -->
    <ImageView
        android:id="@+id/settingIconIV"
        style="@style/SettingImageView"
        android:onClick="goToSetting"
        android:contentDescription="@string/image_description" />

    <!-- Streak TextView -->
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp" >

        <TextView
            android:id="@+id/currentStreakTV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:onClick="onStreakClick"
            android:textAppearance="@style/default_font"
            android:textColor="@color/background"
            android:textSize="12sp"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/streakTooltipTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentStreakTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/popup_background"
            android:gravity="center"
            android:padding="10dp"
            android:textAppearance="@style/default_font"
            android:textColor="@color/beige"
            android:textSize="10sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <!-- Bomb RelativeLayout -->
    <RelativeLayout
        android:id="@+id/bombRL"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_above="@+id/llKeyboard"
        android:layout_alignStart="@+id/llKeyboard"
        android:layout_marginBottom="10dp"
        android:onClick="onBombClick">

        <ImageView
            android:background="@drawable/ui_background"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:padding="1dp"
            android:src="@drawable/bomb"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/bombCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_background"
            android:paddingHorizontal="5dp"
            android:textSize="12sp"
            android:textAppearance="@style/default_font"
            android:textColor="@color/gray"/>

    </RelativeLayout>

    <!-- Skip RelativeLayout -->
    <RelativeLayout
        android:id="@+id/skipRL"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_above="@+id/llKeyboard"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="onSkipClick">

        <ImageView
            android:background="@drawable/ui_background"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:padding="3dp"
            android:src="@drawable/skip"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/skipCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_background"
            android:paddingHorizontal="5dp"
            android:textSize="12sp"
            android:textAppearance="@style/default_font"
            android:textColor="@color/gray"/>

    </RelativeLayout>

    <!-- Hint RelativeLayout -->
    <RelativeLayout
        android:id="@+id/hintRL"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_above="@+id/llKeyboard"
        android:layout_alignEnd="@+id/llKeyboard"
        android:layout_marginBottom="10dp"
        android:onClick="onHintClick">

        <ImageView
            android:background="@drawable/ui_background"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:src="@drawable/hint"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/hintCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_background"
            android:paddingHorizontal="5dp"
            android:textSize="12sp"
            android:textAppearance="@style/default_font"
            android:textColor="@color/gray"/>

    </RelativeLayout>

    <!-- Currency RelativeLayout -->
    <RelativeLayout
        android:id="@+id/currencyRL"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/backIconIV"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:onClick="onCurrencyClick"
        android:background="@drawable/border_background">


        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="-15dp"
            android:padding="4dp"
            android:background="@drawable/border_background"
            android:src="@drawable/coin"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/currencyCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/beige"
            android:textAppearance="@style/default_font"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/plus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="-5dp"
            android:contentDescription="@string/image_description" />

    </RelativeLayout>

    <!-- TargetWord TextView -->
    <TextView
        android:id="@+id/targetWordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/skipRL"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textAppearance="@style/default_font"
        android:textColor="@color/beige"
        android:background="@drawable/border_background"
        android:visibility="gone"/>

    <!-- Shadow View -->
    <View
        android:id="@+id/shadowV"
        style="@style/ShadowLayout"/>

    <!-- Reset ImageView -->
    <ImageView
        android:id="@+id/resetIV"
        android:src="@drawable/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="70dp"
        android:onClick="handleResetClick"
        android:visibility="gone"
        android:contentDescription="@string/image_description" />

    <!-- Mid-Game Warning RelativeLayout -->
    <RelativeLayout
        android:id="@+id/leaveGameRL"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/popup_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/midGameExitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/wordle_exit"
            android:textSize="20sp"
            android:textColor="@color/beige"
            android:textAppearance="@style/default_font"
            android:gravity="center" />

        <Button
            android:id="@+id/popupLeaveB"
            android:tag="leave"
            android:background="@drawable/ui_background"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:text="@string/leave"
            android:textSize="20sp"
            android:textColor="@color/beige"
            android:textAppearance="@style/default_font"
            android:onClick="handleLeaveButtons" />

        <Button
            android:id="@+id/popupStayB"
            android:tag="stay"
            android:background="@drawable/exit_no"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="@string/stay"
            android:textSize="20sp"
            android:textColor="@color/beige"
            android:textAppearance="@style/default_font"
            android:onClick="handleLeaveButtons" />


    </RelativeLayout>

    <!-- Shop RelativeLayout -->
    <RelativeLayout
        android:id="@+id/shopRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_background"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/shopLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ui_background">

                <ImageView
                    android:id="@+id/ivBuyBomb"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bomb"
                    android:contentDescription="@string/image_description" />

                <TextView
                    android:id="@+id/shopBombCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_alignBottom="@id/ivBuyBomb"
                    android:layout_alignEnd="@+id/ivBuyBomb"
                    android:layout_marginEnd="5dp"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/circle_background"
                    android:textAppearance="@style/default_font"/>

                <Button
                    android:id="@+id/shopBombBuyB"
                    android:tag="bomb"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="@string/buy40"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAppearance="@style/default_font"
                    android:onClick="handleShopButtons"
                    android:background="@drawable/keyboard_keys_background"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ui_background">

                <ImageView
                    android:id="@+id/ivBuySkip"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/skip"
                    android:contentDescription="@string/image_description" />

                <TextView
                    android:id="@+id/shopSkipCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_alignBottom="@id/ivBuySkip"
                    android:layout_alignEnd="@+id/ivBuySkip"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/circle_background"
                    android:textAppearance="@style/default_font"/>

                <Button
                    android:id="@+id/shopSkipBuyB"
                    android:tag="skip"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="@string/buy200"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAppearance="@style/default_font"
                    android:onClick="handleShopButtons"
                    android:background="@drawable/keyboard_keys_background"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ui_background">

                <ImageView
                    android:id="@+id/ivBuyHint"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/hint"
                    android:contentDescription="@string/image_description" />

                <TextView
                    android:id="@+id/shopHintCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_alignBottom="@id/ivBuyHint"
                    android:layout_alignEnd="@+id/ivBuyHint"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/circle_background"
                    android:textAppearance="@style/default_font"/>

                <Button
                    android:id="@+id/shopHintBuyB"
                    android:tag="hint"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="@string/buy100"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textAppearance="@style/default_font"
                    android:onClick="handleShopButtons"
                    android:background="@drawable/keyboard_keys_background"/>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/shopCloseBuyB"
            android:tag="close"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/shopLL"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/exit_no"
            android:text="@string/close"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textAppearance="@style/default_font"
            android:onClick="handleShopButtons"/>

    </RelativeLayout>



</RelativeLayout>