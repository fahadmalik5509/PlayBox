<resources>

    <style name="default_font">
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="funky_font">
        <item name="android:fontFamily">@font/funkyfont</item>
    </style>

    <style name="BackgroundLottieAnimation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="lottie_asyncUpdates">enabled</item>
        <item name="lottie_cacheComposition">true</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

    <style name="KeyboardTextView">
        <item name="android:background">@drawable/keyboard_keys_background</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/default_font</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">keyboardClicked</item>
        <item name="android:stateListAnimator">@animator/pulse_animation</item>
    </style>

    <style name="letterBoxTextView">
        <item name="android:background">@drawable/wordle_letterbox_background</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAppearance">@style/default_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="NavigationButton">
        <item name="android:background">@drawable/ui_background</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:textAppearance">@style/default_font</item>
        <item name="android:stateListAnimator">@animator/pulse_animation</item>
    </style>

    <style name="BoardButton">
        <item name="android:background">@drawable/ui_background</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:textAppearance">@style/default_font</item>
        <item name="android:onClick">handleBoardClick</item>
        <item name="android:stateListAnimator">@animator/pulse_animation</item>
    </style>

    <style name="ShadowLayout">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.5</item>
        <item name="android:visibility">gone</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CP_HeartsLottieAnimation">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="lottie_asyncUpdates">enabled</item>
        <item name="lottie_cacheComposition">true</item>
    </style>

</resources>
